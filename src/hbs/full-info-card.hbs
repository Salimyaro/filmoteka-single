<div class="info-card">
	<img class="info-card__image" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{title}}"
		onerror="this.onerror=null;this.src='https://ik.imagekit.io/tc8jxffbcvf/default-movie-portrait_EmJUj9Tda5wa.jpg?tr=fo-auto,di-';" />
	<div class="info-card__wrapper" >

		<h2 class="info-card__title">{{title}}</h2>
		<div><ul class="info-card__list">
			<li class="info-card__list-item">
				<span class="info-card__votes-text">Vote / Votes</span>
				<span class="info-card__votes-count">
					<span class="info-card__votes-average">{{vote_average}}</span> /  {{vote_count}}
				</span>
			</li>
			<li class="info-card__list-item">
				<span class="info-card__popularity-text">Popularity</span>
				<span class="info-card__popularity-num">{{popularity}}</span>
			</li>
			<li class="info-card__list-item">
				<span class="info-card__original-text">Original Title</span>
				<span class="info-card__original-title">{{original_title}}</span>
			</li>
			<li class="info-card__list-item">
				<span class="info-card__genre-text">Genre</span>
				<span class="info-card__genre">
					{{#each genres}}
					{{name}}
					{{/each}}
				</span>
			</li>
		</ul>
		<p class="info-card__about">About</p>
		<p class="info-card__overview">
			{{overview}}
		</p>
		</div>
		<div class="buttons info-card__buttons">
			<button class="button info-card__button" id="add-to-watched">add to Watched</button>
			<button class="button info-card__button" id="add-to-queue">add to queue</button>
		</div>
		<button class="info-card__close" id="modal-close">
			&#x2718;
		</button></div>
</div>